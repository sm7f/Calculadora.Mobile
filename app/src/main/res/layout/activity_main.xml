<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:singleLine="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="30sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_limpar"
            style="@style/operators_button"
            android:layout_weight="3"
            android:text="C" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dividir"
            style="@style/operators_button"
            android:layout_weight="1"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_7"
            style="@style/number_button"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_8"
            style="@style/number_button"
            android:text="8" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_9"
            style="@style/number_button"
            android:text="9" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_mult"
            android:layout_weight="1"
            style="@style/operators_button"
            android:text="X" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_4"
            style="@style/number_button"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_5"
            style="@style/number_button"
            android:text="5" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_6"
            style="@style/number_button"
            android:text="6" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_sub"
            style="@style/operators_button"
            android:text="-" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_1"
            style="@style/number_button"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_2"
            style="@style/number_button"
            android:text="2" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_3"
            style="@style/number_button"
            android:text="3" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_soma"
            style="@style/operators_button"
            android:text="+" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_ponto"
            style="@style/number_button"
            android:text="." />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_zero"
            style="@style/number_button"
            android:text="0" />

        <ImageView
            android:id="@+id/bt_apagar"
            style="@style/number_button"
            android:src='@drawable/backspace'

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_igual"
            style="@style/operators_button"
            android:text="=" />
    </LinearLayout>

</LinearLayout>